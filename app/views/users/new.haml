%fieldset#login_field
  = error_messages_for :user
  - form_for :user, :url => users_path do |f|
    %p
      %label{:login => 'login'} Login
      %br/
      = f.text_field :login

    %p
      %label{:for => 'email'} Email
      %br/
      = f.text_field :email

    %p
      %label{:for => 'password'} Mot de passe
      %br/
      = f.password_field :password
    
    %p
      %label{:for => 'password_confirmation'} Confirmation du mot de passe
      %br/
      = f.password_field :password_confirmation

    %p
      %label{:for => 'player_id'} Matricule du joueur principale
      %br/
      = f.text_field :player_id

    %p
      = submit_tag "S'enregistrer"
