  %img{:title => "close", :src => "/images/close.gif", :id => 'close_bulle', :style => "z-index:2000;right:20px; position:absolute; top:20px;"}
  #bulle_top
  #bulle_loader
    %p
      %img#loader_ajax{:src => '/images/ajax-loader.gif'}
  #bulle_content
  #bulle_bottom
